{
  "mongoConns": [
    {
      "key": "mongo-local",
      "mongoUri": "mongodb://localhost:27017"
    }
  ],
  "databases": {
    "runtime": [
      {
        "key": "runtime-local",
        "mongoConnKey": "mongo-local",
        "tenantId": "local",
        "spacesConnKey": "minio-local",
        "dbName": "runtime_local"
      }
    ],
    "logs": {
      "connection": {
        "key": "logs-local",
        "mongoConnKey": "mongo-local",
        "spacesConnKey": "minio-local",
        "dbName": "chronos_logs"
      }
    }
  },
  "spacesConns": [
    {
      "key": "minio-local",
      "endpoint": "http://localhost:9000",
      "region": "us-east-1",
      "accessKey": "minioadmin",
      "secretKey": "minioadmin",
      "buckets": {
        "json": "chronos-json",
        "content": "chronos-content",
        "versions": "chronos-versions",
        "backup": "chronos-backups"
      },
      "forcePathStyle": true
    }
  ],
  "routing": {
    "hashAlgo": "rendezvous",
    "chooseKey": "tenantId|dbName"
  },
  "retention": {
    "ver": { "days": 30, "maxPerItem": 10 },
    "counters": { "days": 90, "weeks": 26, "months": 12 }
  },
  "rollup": {
    "enabled": true,
    "manifestPeriod": "weekly"
  },
  "collectionMaps": {
    "testDocuments": {
      "indexedProps": ["testId", "category"],
      "base64Props": {
        "data": {
          "contentType": "application/octet-stream",
          "preferredText": false
        }
      },
      "validation": {
        "requiredIndexed": ["testId"]
      }
    }
  },
  "devShadow": {
    "enabled": true,
    "ttlHours": 12,
    "maxBytesPerDoc": 524288
  },
  "logicalDelete": {
    "enabled": true
  },
  "versioning": {
    "enabled": true
  },
  "fallback": {
    "enabled": false
  },
  "transactions": {
    "enabled": false,
    "autoDetect": false
  }
}
