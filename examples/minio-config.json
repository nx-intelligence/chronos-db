{
  "mongoUris": [
    "mongodb://localhost:27017/chronos"
  ],
  "spacesConns": [
    {
      "endpoint": "http://localhost:9000",
      "region": "us-east-1",
      "accessKey": "minioadmin",
      "secretKey": "minioadmin",
      "backupsBucket": "chronos-backups",
      "jsonBucket": "chronos-json",
      "contentBucket": "chronos-content",
      "forcePathStyle": true
    }
  ],
  "counters": {
    "mongoUri": "mongodb://localhost:27017/chronos_counters",
    "dbName": "chronos_counters"
  },
  "routing": {
    "hashAlgo": "rendezvous",
    "chooseKey": "tenantId|dbName"
  },
  "retention": {
    "ver": { "days": 30, "maxPerItem": 10 },
    "counters": { "days": 90, "weeks": 26, "months": 12 }
  },
  "rollup": {
    "enabled": true,
    "manifestPeriod": "weekly"
  },
  "collectionMaps": {
    "testDocuments": {
      "indexedProps": ["testId", "category"],
      "base64Props": { 
        "data": { 
          "contentType": "application/octet-stream",
          "preferredText": false
        } 
      },
      "validation": { 
        "requiredIndexed": ["testId"] 
      }
    }
  },
  "devShadow": {
    "enabled": true,
    "ttlHours": 12,
    "maxBytesPerDoc": 524288
  },
  "fallback": {
    "enabled": false
  },
  "transactions": {
    "enabled": false,
    "autoDetect": false
  }
}
